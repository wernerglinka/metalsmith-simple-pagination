{
  "git": {
    "requireBranch": "main",
    "commitMessage": "Release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}"
  },
  "github": {
    "release": true,
    "repo": "wernerglinka/metalsmith-simple-pagination",
    "releaseName": "metalsmith-simple-pagination ${version}",
    "tokenRef": "GITHUB_TOKEN",
    "assets": ["metalsmith-simple-pagination-${version}.tgz"]
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:bump": "npm run changelog && git add CHANGELOG.md",
    "after:git:bump": "npm run update-coverage",
    "after:release": "echo 'Successfully released ${name} v${version}. You can now publish this to NPM manually.'"
  },
  "plugins": {
    "@release-it/bumper": {
      "out": {
        "file": "README.md",
        "type": "text/plain"
      }
    }
  }
}
